<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>
			{% block title %}{% endblock %}
		</title>

		<link rel="stylesheet" href="/assets/css/style.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous"> {% block stylesheet %}{% endblock %}
		<link rel="icon" href="/assets/images/favicon.png">
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Trispace&display=swap" rel="stylesheet">

	</head>

	<body id='bg-layout' style="background-image:url('{{ backgroundImg }}')">
		<header class='text-warning text-center pt-3 pb-5' style="background-image:url('/assets/images/header-sky.jpg')">
			<h2 class = "pb-3">Robots Gone Wild &#129302;</h2>
		</header>

		{% block robot %}{% endblock %}
		
		<div class='container scrollable'>
			<div class='row'>
				<div class='col border border-style-solid m-2 text-start' id="description">
					<output>

						<p>
							<span class='text-danger'>NASA Com-link:</span>
							{% block description %}{% endblock %}
						</p>

					</output>
				</div>
			</div>
			
			{% block activities %}{% endblock %}

			<div class='row justify-content-between mt-4'>
				<div class='col-12 col-md-4 mb-3'>
					<a href="{% block href_party %}{% endblock %}" class="btn btn-outline-warning">
					<h4>
					{% block btn_party %}{% endblock %}
					</h4>
					</a>
				</div>

				<div class='col-12 col-md-4 mb-3'>
					<a href="{% block href_serious %}{% endblock %}" class="btn btn-outline-success">
					<h4>
					{% block btn_serious %}{% endblock %}
					</h4>
					</a>
				</div>

				<div class='col-12 col-md-4 mb-3'>
					<a href="{% block href_skynet %}{% endblock %}" class="btn btn-outline-danger">
					<h4>
						{% block btn_skynet %}{% endblock %}
					</h4>
					</a>
				</div>
			</div>

			<div class='row'>
				{% if name == 'Percy' %}
					<div id="robot-image" class='mb-3 mt-5'>
						<h4 class='text-danger'>
							Playing as Percy
						</h4>
						<img class='img-fluid mt-2 mb-5' src="/assets/images/percy.png" alt="C'est Percy ma gueule" width="550" height="300">
					</div>
				{% elseif name == 'Ginny' %}
					<div id="robot-image" class='mb-3 mt-5'>
						<h4 class='text-danger'>
							Playing as Ginny
						</h4>
						<img class='img-fluid mt-2 mb-5' src="/assets/images/ginny.png" alt="C'est Ginny ma gueule" width="550" height="300">
					</div>
				{% endif %}
			</div>
		</div>

		<footer class='text-warning text-center mt-4 pt-2' style="background-image:url('/assets/images/header-sky.jpg')">
		Created By LÃ©a, Lionel, Pierre-Emmanuel et Emmanuel
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
	</body>
</html>
